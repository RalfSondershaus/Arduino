{
    "inputs": [
        {
            "id": "AppProjectName",
            "type": "pickString",
            "description": "Select project name",
            "default": "App/Signal",
            "options": [
                "App/BlinkSample",
                "App/DccSniffer",
                "App/Signal",
            ]
        },
        {
            "id": "UnitTestProjectName",
            "type": "pickString",
            "description": "Select project name",
            "default": "UnitTest/Gen/Util/Ut_Sstream",
            "options": [
                "UnitTest/Gen/Dcc/Ut_Packet",
                "UnitTest/Gen/Dcc/Ut_PacketExtractor",
                "UnitTest/Gen/Util/Ut_Algorithm",
                "UnitTest/Gen/Util/Ut_Array",
                "UnitTest/Gen/Util/Ut_Bitset",
                "UnitTest/Gen/Util/Ut_Fix_Deque",
                "UnitTest/Gen/Util/Ut_Fix_Queue",
                "UnitTest/Gen/Util/Ut_InputClassifier",
                "UnitTest/Gen/Util/Ut_Ramp",
                "UnitTest/Gen/Util/Ut_Sstream",
                "UnitTest/Gen/Util/Ut_String",
                "UnitTest/Gen/Util/Ut_String_view",
                "UnitTest/Gen/Util/Ut_Vector",
                "UnitTest/Prj/Ut_Signal",
                "UnitTest/Prj/Ut_Signal_Performance",
                "UnitTest/Prj/Ut_Signal_LedRouter",
                "UnitTest/Prj/Ut_Signal_Com",
            ]
        }
    ],
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build App avr_gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "cppbuild",
            "label": "Rebuild App avr_gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Run App avr_gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "download"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build UnitTest Win gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cppbuild",
            "label": "Rebuild UnitTest Win gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Run UnitTest Win gcc",
            "command": ".\\Build\\build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Rebuild UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Run UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "download"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Generate Doxygen Docs",
            "type": "shell",
            "command": "doxygen",
            "args": [
                "Doxyfile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}