{
    "inputs": [
        {
            "id": "AppProjectName",
            "type": "pickString",
            "description": "Select project name",
            "default": "App/Signal",
            "options": [ 
                "App/BlinkSample", 
                "App/Signal", 
            ]
        },
        {
            "id": "UnitTestProjectName",
            "type": "pickString",
            "description": "Select project name",
            "default": "UnitTest/Gen/Util/Ut_Sstream",
            "options": [ 
                "UnitTest/Gen/Util/Ut_Packet",
                "UnitTest/Gen/Util/Ut_PacketExtractor",
                "UnitTest/Gen/Util/Ut_Ramp",
                "UnitTest/Gen/Util/Ut_Sstream",
                "UnitTest/Gen/Util/Ut_String_Unity",
                "UnitTest/Gen/Util/Ut_Vector",
                "UnitTest/Prj/Ut_Signal",
                "UnitTest/Prj/Ut_Signal_LedRouter",
            ]
        }

    ],
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build App avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "cppbuild",
            "label": "Rebuild App avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Run App avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:AppProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "none",
                "download"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build UnitTest Win gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "cppbuild",
            "label": "Rebuild UnitTest Win gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Run UnitTest Win gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "win32",
                "gcc",
                "win",
                "unity",
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Rebuild UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Run UnitTest avr_gcc",
            "command": ".\\Build\\Build.bat",
            "args": [
                "${input:UnitTestProjectName}",
                "mega",
                "avr_gcc",
                "arduino",
                "unity",
                "download"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
    ],
    "version": "2.0.0"
}